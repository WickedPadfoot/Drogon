 <%= semantic_form_for @character do |f| %>
    <%= f.inputs do %>
      <%= f.input :name %>
      <%= f.input :alignement,  :as => :select,      :collection => Character::ALIGNMENTS %>
      <%= image_tag @character.avatar(:medium) %>
      <%= f.input :avatar,  :as => :file %>
    <% end %>
    <%= f.actions %>
  <% end %>