<h1 class="titleDevise">Welcome to you, stranger. Tell us who you are...</h1>

<div class="scroll-login row">
  <div class="form col-md-6 col-md-offset-2">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :username, class:"subtitleDevise" %><br />
        <%= f.text_field :username, class: "input-text", autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password, class:"subtitleDevise" %><br />
        <%= f.password_field :password, class: "input-text", autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <div class="checkbox-round">
            <%= f.check_box :remember_me %>
            <label></label>
          </div>
          <%= f.label :remember_me, class:"subtitleDevise" %>
        </div>
      <% end -%>
      <div class="actions">
        <div class="dice">
          <div class="dice-bg dice-d20"></div>
          <%= f.submit "Log in", class:"dice-content" %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>


