<h1 class="center">Welcome to you, stranger. Tell us who you are...</h1>

<div class="scroll-login row">
  <div class="col-md-4 col-md-offset-2">
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, class: "input-text", autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "input-text", autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <%= f.submit "Log in", class: "dice dice-d8" %>
    <% end %>
    <div class="actions">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


