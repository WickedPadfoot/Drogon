<h1 class="titleDevise">So...First time here? We hope you will enjoy...</h1>
<div class="scroll-login row">
  <div class="col-md-6 col-md-offset-2">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :username, class:"subtitleDevise"%><br />
          <%= f.text_field :username, class: "input-text", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :email, class:"subtitleDevise" %><br />
          <%= f.email_field :email, class: "input-text", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password, class:"subtitleDevise" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, class: "input-text", autofocus: true , autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class:"subtitleDevise"%><br />
          <%= f.password_field :password_confirmation, class: "input-text", autofocus: true , autocomplete: "off" %>
        </div>

        <div class="actions">
          <div class="dice">
            <div class="dice-bg dice-d20"></div>
            <%= f.submit "Sign up", class:"dice-content"%>
          </div>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
  </div>
</div>
