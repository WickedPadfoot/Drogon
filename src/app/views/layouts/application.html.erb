<!DOCTYPE html>
<html>
<head>
  <title>App</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <section role="errors" class="errors">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </section>

  <main role="app" class="app script script--honey script--light grid">
    <section role="nav" class="menu grid__col-xs-3 grid__col-lg-2 grid__col--bleed">
      <%= image_tag 'menu-top-icon.png', class: 'menu__top-icon grid__cell-img' %>

      <nav class="">
        <ul class="menu__items">
          <li><%= link_to 'Profile', edit_user_registration_path(current_user), class: 'menu__item' %></li>
          <li><%= link_to 'Settings', '', class: 'menu__item' %></li>
          <li><%= link_to 'Add character', new_character_path, class: 'menu__item' %></li>
          <li><%= link_to 'Add campaign', new_campaign_path, class: 'menu__item' %></li>
        </ul>
      </nav>
    </section>
    <section role="content" class="app__content grid__col-xs-9 grid__col-lg-10">
      <%= yield %>
    </section>
  </main>
  <footer>
    Made with &#10084; by some fellow adventurers &mdash;
    <span class="links">
      <%= link_to 'github', 'https://github.com/ostiGaming/drogon' %>
      &nbsp;
      <%= link_to 'waffle', 'https://waffle.io/ostiGaming/drogon' %>
    </span>
  </footer>
</body>
</html>
